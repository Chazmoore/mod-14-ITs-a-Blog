{{!-- views/dashboard.handlebars --}}
<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <!-- Link to your CSS file -->
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <div class="dashboard-content">
        {{#if blogPosts.length}}
            <div class="existing-posts">
                <h3>Your Existing Blog Posts</h3>
                {{#each blogPosts}}
                    <div class="post">
                        <h4>{{title}}</h4>
                        <p>{{content}}</p>
                        <form class="delete-post-form" action="/dashboard/delete/{{id}}" method="post">
                            <button type="submit" class="delete-post-btn">Delete</button>
                        </form>
                        <a href="/dashboard/update/{{id}}" class="update-post-btn">Update</a>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p>You haven't created any blog posts yet.</p>
        {{/if}}

        <div class="add-post">
            <h3>Add a New Blog Post</h3>
            <form id="newPostForm" action="/dashboard/add" method="post">
                <div class="form-group">
                    <label for="postTitle">Title:</label>
                    <input type="text" id="postTitle" name="title" required>
                </div>
                <div class="form-group">
                    <label for="postContent">Content:</label>
                    <textarea id="postContent" name="content" rows="4" required></textarea>
                </div>
                <button type="submit">Create Post</button>
            </form>
        </div>
    </div>

    <!-- Include your JavaScript files for dashboard functionality -->
    <script src="/public/Javascript/edit.js"></script>
    <script src="/public/Javascript/newpost.js"></script>
    <script src="/public/Javascript/deletepost.js"></script>
</body>
</html>




