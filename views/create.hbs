
<body>
    <!-- Include the main header -->
    {{> main}}

    <div class="create-post">
        <h2>Create New Blog Post</h2>
        <form id="createPostForm" action="/dashboard/add" method="post">
            <div class="form-group">
                <label for="postTitle">Title:</label>
                <input type="text" id="postTitle" name="title" required>
            </div>
            <div class="form-group">
                <label for="postContent">Content:</label>
                <textarea id="postContent" name="content" rows="6" required></textarea>
            </div>
            <button type="submit">Create Post</button>
        </form>
    </div>

    <!-- Include your JavaScript file for form validation and functionality (if needed) -->
    <script src="/public/Javascript/createpost.js"></script>
</body>
</html>

